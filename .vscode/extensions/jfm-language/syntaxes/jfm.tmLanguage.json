{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "JFM",
    "scopeName": "source.jfm",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#template-strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#builtins"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.jfm",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.jfm",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.jfm",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "template-strings": {
            "patterns": [
                {
                    "name": "string.template.jfm",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "constant.character.escape.jfm",
                            "match": "\\\\."
                        },
                        {
                            "name": "meta.template.expression.jfm",
                            "begin": "\\$\\{",
                            "end": "\\}",
                            "beginCaptures": {
                                "0": {
                                    "name": "punctuation.definition.template-expression.begin.jfm"
                                }
                            },
                            "endCaptures": {
                                "0": {
                                    "name": "punctuation.definition.template-expression.end.jfm"
                                }
                            },
                            "patterns": [
                                {
                                    "include": "#comments"
                                },
                                {
                                    "include": "#strings"
                                },
                                {
                                    "include": "#numbers"
                                },
                                {
                                    "include": "#keywords"
                                },
                                {
                                    "include": "#builtins"
                                },
                                {
                                    "include": "#constants"
                                },
                                {
                                    "include": "#operators"
                                },
                                {
                                    "include": "#punctuation"
                                },
                                {
                                    "include": "#variables"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.jfm",
                    "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.jfm",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.jfm",
                    "match": "\\b(if|else|for|in|while|break|continue|return)\\b"
                },
                {
                    "name": "keyword.declaration.jfm",
                    "match": "\\b(let|fn)\\b"
                }
            ]
        },
        "builtins": {
            "patterns": [
                {
                    "name": "support.function.array.jfm",
                    "match": "\\b(count|sum|avg|min|max|take|unique|sort|sort_by|group_by|reverse|slice|push|pop|shift|flat|flatten|first|last|zip|find|find_index|every|some|reduce|filter|map|enumerate|replicate|range|cross|clone)\\b"
                },
                {
                    "name": "support.function.string.jfm",
                    "match": "\\b(len|trim|upper|lower|split|join|contains|starts_with|ends_with|replace)\\b"
                },
                {
                    "name": "support.function.object.jfm",
                    "match": "\\b(keys|values|entries|has|merge|deep_merge|set_path)\\b"
                },
                {
                    "name": "support.function.type.jfm",
                    "match": "\\b(typeof|is_null|is_array|is_object|is_string|is_number|is_bool|to_string|to_number|parse_json)\\b"
                },
                {
                    "name": "support.function.math.jfm",
                    "match": "\\b(floor|ceil|round|abs|sqrt|pow|sin|cos|tan|random)\\b"
                },
                {
                    "name": "support.function.io.jfm",
                    "match": "\\b(print|input|include)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.true.jfm",
                    "match": "\\btrue\\b"
                },
                {
                    "name": "constant.language.boolean.false.jfm",
                    "match": "\\bfalse\\b"
                },
                {
                    "name": "constant.language.null.jfm",
                    "match": "\\bnull\\b"
                },
                {
                    "name": "variable.language.root.jfm",
                    "match": "\\broot\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.assignment.compound.jfm",
                    "match": "\\+=|-=|\\*=|/=|\\|="
                },
                {
                    "name": "keyword.operator.assignment.jfm",
                    "match": "="
                },
                {
                    "name": "keyword.operator.comparison.jfm",
                    "match": "==|!=|>=|<=|>|<"
                },
                {
                    "name": "keyword.operator.logical.jfm",
                    "match": "&&|\\|\\||!"
                },
                {
                    "name": "keyword.operator.nullcoalesce.jfm",
                    "match": "\\?\\?"
                },
                {
                    "name": "keyword.operator.ternary.jfm",
                    "match": "\\?|:"
                },
                {
                    "name": "keyword.operator.optional-chaining.jfm",
                    "match": "\\?\\."
                },
                {
                    "name": "keyword.operator.arrow.jfm",
                    "match": "=>"
                },
                {
                    "name": "keyword.operator.pipe.jfm",
                    "match": "\\|"
                },
                {
                    "name": "keyword.operator.spread.jfm",
                    "match": "\\.\\.\\."
                },
                {
                    "name": "keyword.operator.range.jfm",
                    "match": "\\.\\."
                },
                {
                    "name": "keyword.operator.arithmetic.jfm",
                    "match": "\\+|-|\\*|/|%|\\^"
                },
                {
                    "name": "keyword.operator.accessor.jfm",
                    "match": "\\."
                }
            ]
        },
        "punctuation": {
            "patterns": [
                {
                    "name": "punctuation.separator.comma.jfm",
                    "match": ","
                },
                {
                    "name": "punctuation.terminator.statement.jfm",
                    "match": ";"
                },
                {
                    "name": "punctuation.definition.block.jfm",
                    "match": "[{}]"
                },
                {
                    "name": "punctuation.definition.array.jfm",
                    "match": "[\\[\\]]"
                },
                {
                    "name": "punctuation.definition.parameters.jfm",
                    "match": "[()]"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.jfm",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}